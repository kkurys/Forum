@model Forum.Models.Announcement
@using Forum.Content.Localization

<h2>@Html.DisplayFor(model => model.Title)</h2>

<div>
    <h4>
        @Html.DisplayFor(model => model.Content)
    </h4>
    <div class="well well-sm">
        @Html.DisplayFor(model => model.User.UserName), 
        @Html.DisplayFor(model => model.Date)
    </div>
    <hr />
</div>
<p>
    <a href="@Url.Action("Index", "Announcement")" class="btn btn-default btn-sm">@Resources.BackToList</a>
    <a href="@Url.Action("Edit", "Announcement", new { id = Model.ID })" class="btn btn-default btn-sm">@Resources.Edit</a>
</p>
