@using Forum.Content.Localization
@model Forum.Models.ModeratorsListViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.ModeratorsList</h2>
<div id="accordion">
    @foreach (Forum.Models.Forum _forum in Model.Forums)
    {
        <h3> @_forum.Name</h3>
        <div>
            <ul>
                @foreach (Forum.Models.User _user in _forum.Moderators)
                {
                    <li>@_user.UserName</li>
                }
            </ul>
            @using (Html.BeginForm("AddModerator", "Admin", null, FormMethod.Post,
                         new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(model => Model.ForumID, new { @Value = _forum.ID })
                <div class="form-group">
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control user-lookup" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        <input type="submit" value="@Resources.Add" class="btn btn-default" />
                    </div>
                </div>

            }
        </div>

    }

</div>


@section scripts
{
    <link href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" rel="Stylesheet" />
    <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
    <script>
        $(function() {

            @if (Model.ActiveForum.HasValue)
            {
              <text>
                 $("#accordion").accordion({ active: @Model.ActiveForum - 1});
               </text>
          }
          else
          {
              <text>
                 $("#accordion").accordion();
              </text>
          }
        } );
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".user-lookup").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/PrivateMessage/GetMatchingUsers",
                        type: "POST",
                        dataType: "json",
                        data: { term: request.term },
                        success: function (data) {
                            console.log(data[0].value)
                            response($.map(data, function (item) {
                                return { label: item.value, value: item.value };
                            }))

                        }
                    })
                },
                messages: {
                    noResults: "", results: function () { }
                },
                minLength: 2
            });
        });
    </script>
}