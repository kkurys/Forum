@model IEnumerable<Forum.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Posty</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Topic.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Topic.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @if (item.Content.Length < 50)
            {
                @Html.DisplayFor(modelItem => item.Content)
            }
            else
            {
                @Html.DisplayFor(modelItem => item.Content).ToString().Substring(0, 50)
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }, new { @class = "text-details" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }, new { @class = "text-delete" })
        </td>
    </tr>
}

</table>
