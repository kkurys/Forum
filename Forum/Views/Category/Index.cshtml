@model IEnumerable<Forum.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2 class="pull-left">Kategorie</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }, new { @class = "text-details" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }, new { @class = "text-delete", onclick = "return confirm('Na pewno chcesz usunąć?');" })
        </td>
    </tr>
}

</table>

<a href="@Url.Action("Create")" class="btn btn-primary btn-sm">Dodaj</a>
